@model Webdotnet.Custom.ViewModels.LayoutBaseViewModel
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@Model.Title</title>
</head>
<body>
  @if (Model.Header != null)
  {
      @Html.Partial(Model.Header.PartialPath, Model.Header.ViewModel)
  }

  <div class="content">
    @RenderBody()
  </div>
  @if (Model.Footer != null)
  {
      @Html.Partial(Model.Footer.PartialPath, Model.Footer.ViewModel)
  }
</body>
</html>
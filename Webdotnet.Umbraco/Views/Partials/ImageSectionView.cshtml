@inherits UmbracoViewPage<Webdotnet.Custom.ViewModels.ImageSectionViewModel>

<section class="container-section image-section">
  @if (!string.IsNullOrEmpty(Model.Header))
  {
    <h1 class="image-section-header">@Model.Header</h1>
  }
  <p>
    <img src="@Model.Image.Url" alt="@Model.Image.Alias"/>
  </p>
</section>